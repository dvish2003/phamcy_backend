pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/dvish2003/phamcy_backend.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building project...'
                 sh 'npm install'
                 sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'npm test'

            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }
}

